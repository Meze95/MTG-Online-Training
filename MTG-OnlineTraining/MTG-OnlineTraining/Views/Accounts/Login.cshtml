@model MTG_OnlineTraining.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Login Page";
}

<partial name="_notification" />

<div class="container mt-3">
      <div class="row py-2 justify-content-center">
                <div class="col-10 border my-5 formProgCreat">
                     <div class="row justify-content-center p-5 bg-light formProgCreat">
                        <div class="col-10 bg-light formProgCreat-IN AllForm">
                        <div class="row btt-borda">
                            <div class="col-md-12 py-3 HDD">                    
                                <h1 class="text-center">Login</h1>
                            </div>
                        </div>
                        <form asp-controller="Accounts" asp-action="Login">
                            <div asp-validation-summary="ModelOnly" class="text-denger"></div>
                            <div class="row pb-3">
                                <div class="col-md-12">                    
                                    <label>Email</label>
                                    <input type="email" asp-for="Email" class="form-control" placeholder="Enter email"/>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row py-3">
                                <div class="col-md-12">                    
                                    <label>Password</label>
                                    <input class="form-control" type="password" asp-for="Password" placeholder="Enter password"/>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row py-3">
                                <div class="col-md-6">
                                    <input id="checkbox-signup" type="checkbox" class="material-inputs chk-col-indigo"/>
                                    <label for="checkbox-signup"> Remember me </label>
                                </div>
                                <div class="col-md-6 text-right">     
                                    <h5 class="text-right text-primary">Forgot Password?</h5>
                                </div>
                            </div>
                            <div class="row py-3">
                                <div class="col-md-12 text-center">                    
                                    <button type="submit" class="btn btn-success" style="width:80%"> <i class="fa fa-sign-in" aria-hidden="true"></i> &nbsp; Login</button>
                                </div>
                            </div>
                            <div class="row py-3">
                                <div class="col-md-12 text-center">
                                    <h5 class="text-center" >I don't have an account?  <a class="text-success" asp-controller="Accounts" asp-action="Register">Register Now</a></h5>
                                </div>
                            </div>
                        </form>
                        </div>
                     </div>
                </div>
        </div>
    </div>

 <div class="container m-4">
    
 </div>