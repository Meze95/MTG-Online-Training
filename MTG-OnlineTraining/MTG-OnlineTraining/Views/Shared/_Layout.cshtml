<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MTG_OnlineTraining</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Training/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Training/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/toastr.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css"/>

     <script src="~/Training/js/jquery-3.6.0.min.js"></script>
    <script src="~/Training/js/jquery.slim.min.js"></script>
    <script src="~/Training/js/bootstrap.bundle.min.js"></script>
    <script src="~/Training/js/bootstrap.js"></script>
    <script src="~/Training/js/bootstrap.min.js"></script>
    <script src="~/Training/js/popper.min.js"></script>
    <script src="~/Training/js/sweetalert.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</head>
<body>
    <header>

  <!-- General Header area starts -->
  <div class="Cname">
    <div class="contacts-left"> 
      <h2 style="font-weight: bold;">M-Tech <span>Global</span> Institute</h2> 
    </div>
    <div class="contacts"> 
        @if(User.Identity.IsAuthenticated){
           <ul>
            <li><a asp-controller="Accounts" asp-action="LogOut">Log Out</a></li>
                @if (User.IsInRole("Admin"))
                {
                    <li><a asp-controller="Admin" asp-action="Activated">Dashboard</a></li>
                }else{
                    <li><a asp-controller="Students" asp-action="Index">Dashboard</a></li>
                }      
          </ul> 
        }else{
          <ul>
            <li><a asp-controller="Accounts" asp-action="Register"> Sign Up</a></li>
            <li><a asp-controller="Accounts" asp-action="Login">Login</a></li>
          </ul> 
        }
    </div>
  </div>
  <div class="clear-fix"></div>

<!-- General Header Starts here -->

<nav class="navbar navbar-expand-md navbar-light sticky-top">
    <div class="container-fluid">
      <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img style="width: 80px; height: 80px; padding: 0; border-radius: 15px;" src="~/Training/images/logo.png"> </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse HeadLink" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0 LinkCol">
          <li class="nav-item"><a class="nav-link LinkCol" asp-controller="Home" asp-action="Index">Home</a></li>
          <li class="nav-item"><a class="nav-link LinkCol" asp-controller="Home" asp-action="About">About</a></li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle LinkCol" id="navbardrop" data-toggle="dropdown">Services</a>
            <div class="dropdown-menu">
              <a class="dropdown-item LinkCol" href="#">Accounting Training</a>
              <a class="dropdown-item LinkCol" href="#">Software Dev Training</a>
              <a class="dropdown-item LinkCol" href="#">Networking Training</a>
            </div>
          </li>
          <li class="nav-item"><a class="nav-link text-White" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
        </ul>

          <!-- Search bar -->
        <form class="d-flex" role="search">
          <input class="form-control me-1" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-success" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
        </form>
      </div>
    </div>
</nav> 
</header>

        <main role="main">
            @RenderBody()
        </main>


    <!-- Footer area -->

<div class="footer-top mt-5 p-2">
  <div class="row justify-content-center text-white p-4">
    <div class="col-md-3 pt-2"> 
        <h4>Software Development</h4>
        <hr>
              <ul>
                <li><i class="fa fa-check-circle" style="color:#004150;padding-right:15px"></i>HTML</li>
                <li><i class="fa fa-check-circle" style="color:#004150;padding-right:15px"></i>CSS</li>
                <li><i class="fa fa-check-circle" style="color:#004150;padding-right:15px"></i>BOSSTRAP</li>
                <li><i class="fa fa-check-circle" style="color:#004150;padding-right:15px"></i>JavaScript</li>
                <li><i class="fa fa-check-circle" style="color:#004150;padding-right:15px"></i>JQuery</li>
                <li><i class="fa fa-check-circle" style="color:#004150;padding-right:15px"></i>C#</li>
                <li><i class="fa fa-check-circle" style="color:#004150;padding-right:15px"></i>ASP.NET</li>
                <li><i class="fa fa-check-circle" style="color:#004150;padding-right:15px"></i>SQL Server</li>
              </ul>
    </div>   
    <div class="col-md-3 pt-2"> 
        <h4>Computerized Accounting</h4>
        <hr>
              <ul>
                <li><i class="fa fa-check-circle" style="color:#004150;padding-right:15px"></i>Introduction</li>
                <li><i class="fa fa-check-circle" style="color:#004150;padding-right:15px"></i>Customer</li>
                <li><i class="fa fa-check-circle" style="color:#004150;padding-right:15px"></i>Supplier</li>
                <li><i class="fa fa-check-circle" style="color:#004150;padding-right:15px"></i>Products</li>
                <li><i class="fa fa-check-circle" style="color:#004150;padding-right:15px"></i>Nornimal Ledger</li>
                <li><i class="fa fa-check-circle" style="color:#004150;padding-right:15px"></i>Reporting</li>
              </ul>
    </div>  
    <div class="col-md-3 pt-2"> 
        <h4>System Networking</h4>
        <hr>
        <ul>
          <li><i class="fa fa-check-circle" style="color:#004150;padding-right:15px"></i>Introduction</li>
          <li><i class="fa fa-check-circle" style="color:#004150;padding-right:15px"></i>Peer-to-Peer Networking</li>
          <li><i class="fa fa-check-circle" style="color:#004150;padding-right:15px"></i>Client-Server Networking</li>
          <li><i class="fa fa-check-circle" style="color:#004150;padding-right:15px"></i>Network Security Control</li>
          <li><i class="fa fa-check-circle" style="color:#004150;padding-right:15px"></i>Disk & Data Recovery</li>
        </ul>
    </div>  
  </div>

  <div class="social"> 
      <hr>
      <ul>
        <li><a href="#"><i class="fa fa-twitter fa-2x" style="color:white;"></i></a></li>
            <li><a href="#"><i class="fa fa-facebook fa-2x" style="color:white;"></i></a></li>
            <li><a href="#"><i class="fa fa-instagram fa-2x" style="color:white;"></i></a></li>
        </ul>
  </div>
</div>

<div class="container-fluid bg-dark"> 
  <footer id="main-footer">
    <p>Copyright &copy; 2022 All Rights Reserved</p>
    <p>Designed by | MTech Global</p>
  </footer>
</div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
